@page
@model IndexModel
@{
    ViewData["Title"] = "Artist";
}

<div class="container" id="game">
    <div id="divSplash" style="display: flex; align-items:center;">
        <!-- <h1 style="text-align: center" class="mx-auto d-block">DrunkDoodle</h1> -->
        <img id="imgSplash" class="img-fluid" src="/images/splash.png" />
    </div>
    <div id="divCreateRoom">
        <h4>Players</h4>
        <form id="teams">
            <div class="form-row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="Name">
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="Team">
                </div>
            </div>
            <div class="form-row d-flex justify-content-center">
                <a id="btnAddPlayerRow" class="btn btn-secondary"><i class="fas fa-plus-circle"></i></a>
            </div>
            <button type="submit" href="#" class="btn btn-primary" id="btnCreateRoom">Create room</button>
        </form>
        <div id="alertNoPlayers" class="alert alert-warning">You can't start a game with no players!</div>
    </div>
    <div id="divPrepareGame">
        <h4>Prepare game</h4>
        <p>
            <a class="btn btn-dark" id="roomId"></a>
        </p>
        <p>
            <a class="btn btn-success" id="btnStartRound">Start game</a>
        </p>
    </div>
    <div id="divGame">
        <div class="d-flex justify-content-center">
            <div class="d-flex justify-content-between" style="width: 300px;">
                <div>
                    <b id="word">Word</b>
                </div>
                <div></div>
                <div>
                    <b id="countdown"><i class="far fa-clock"></i></b>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <canvas id="artistCanvas" height="300" width="300"></canvas>
        </div>
        <div class="d-flex justify-content-center">
            <div class="d-flex justify-content-center">
                <a class="btn btn-success" id="btnGuessed" style="width: 300px;">Word guessed!</a>
            </div>
        </div>   
        <div class="d-flex justify-content-center">
            <div id="divNowDrawing" style="width: 300px;">
                <p>Now drawing: <span id="spanArtist"></span></p>
                <p>
                    <a class="btn btn-info" id="btnReady">Ready!</a>
                </p>
            </div>
        </div>            
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/artist.js"></script>
    <script src="~/js/both.js"></script>
}